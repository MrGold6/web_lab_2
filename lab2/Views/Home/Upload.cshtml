@model lab1.Models.UploadModel

@{
    ViewData["Title"] = "Upload";
}

<div class="container" data-aos="fade-up" data-aos-delay="100">
    <div class="col-lg-6 offset-lg-3">
        <form asp-action="Upload" method="post" enctype="multipart/form-data" class="row justify-content-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3 row">
                <label for="file" class="col-sm-4 col-form-label">Choose a file:</label>
                <div class="col-sm-8">
                    <input type="file" class="form-control" name="uploadedFile" id="file" />
                </div>
            </div>

            <div class="col-auto">
                <input type="submit" value="Upload" class="btn btn-success" />
            </div>
          
          
        </form>
    </div>
</div>



<center>
    <a asp-action="ViewFiles" class="btn btn-primary mt-3">Back to List</a>
</center>


@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}